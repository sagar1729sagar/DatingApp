<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    >

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/circle_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/fb"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dummy_image"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_age_tv"
        android:layout_toRightOf="@id/circle_image"
        android:layout_toEndOf="@id/circle_image"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="@string/dummy_name_age"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/online_offline_tv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_centerVertical="true"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="@string/online"
        />
    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_toLeftOf="@id/online_offline_tv"
        android:id="@+id/online_offline_image"
        android:layout_alignTop="@id/online_offline_tv"
        android:layout_alignBottom="@id/online_offline_tv"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        />

</RelativeLayout>